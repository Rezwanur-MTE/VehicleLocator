<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentSignup">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/signUpEmailEditTextId2"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:ems="10"
            android:hint="Put the email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/signUpPasswordEditTextId2"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:ems="10"
            android:hint="Make a password"
            android:inputType="numberPassword" />

        <Button
            android:id="@+id/signUpButtonId2"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:text="Sign Up" />

        <TextView
            android:id="@+id/signInTextViewId2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:text="                     Are you already registered?? Then Log in" />

        <ProgressBar
            android:id="@+id/progressBar4"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/earth" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>